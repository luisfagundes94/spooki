<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/tvCategoryTitlePlaceholder"
        style="@style/SmallTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_placeholder_height"
        android:layout_marginStart="@dimen/default_horizontal_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="50dp"
        android:background="@color/mine_shaft"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@+id/btnSeeAllPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/btnSeeAllPlaceholder"
        android:layout_width="80dp"
        android:layout_height="@dimen/default_placeholder_height"
        android:layout_marginEnd="@dimen/default_margin"
        android:background="@color/mine_shaft"
        android:padding="@dimen/default_padding_for_accessibility"
        android:text="@string/btn_see_all"
        android:textColor="@color/purple_heart"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvCategoryTitlePlaceholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCategoryTitlePlaceholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_vertical_margin"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryTitlePlaceholder"
        tools:layout_editor_absoluteX="0dp">

        <View
            android:id="@+id/moviePlaceholder1"
            android:layout_width="@dimen/movie_poster_width"
            android:layout_height="@dimen/movie_poster_height"
            android:layout_marginStart="@dimen/default_horizontal_margin"
            android:layout_marginTop="@dimen/small_vertical_margin"
            android:background="@color/mine_shaft"
            android:paddingStart="@dimen/default_horizontal_margin" />

        <View
            android:id="@+id/moviePlaceholder2"
            android:layout_width="@dimen/movie_poster_width"
            android:layout_height="@dimen/movie_poster_height"
            android:layout_marginStart="@dimen/small_horizontal_margin"
            android:layout_marginTop="@dimen/small_vertical_margin"
            android:background="@color/mine_shaft"
            android:paddingStart="@dimen/default_horizontal_margin" />

        <View
            android:id="@+id/moviePlaceholder3"
            android:layout_width="@dimen/movie_poster_width"
            android:layout_height="@dimen/movie_poster_height"
            android:layout_marginStart="@dimen/small_horizontal_margin"
            android:layout_marginTop="@dimen/small_vertical_margin"
            android:background="@color/mine_shaft"
            android:paddingStart="@dimen/default_horizontal_margin" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>