<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/movie_category_loading_container"
        layout="@layout/movie_category_loading"
        android:visibility="visible"
        tools:visibility="visible" />

    <include
        android:id="@+id/movie_category_error_container"
        layout="@layout/layout_generic_error"
        android:visibility="gone"
        tools:visibility="gone" />

    <include
        android:id="@+id/movie_category_success_container"
        layout="@layout/movie_category"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.appcompat.widget.LinearLayoutCompat>