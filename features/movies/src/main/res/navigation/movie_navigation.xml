<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_navigation"
    app:startDestination="@id/movieCategoryFragment">

    <fragment
        android:id="@+id/movieCategoryFragment"
        android:name="com.luisfelipe.movies.presentation.categories.MovieCategoryFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_movie_category">

        <action
            android:id="@+id/navigateToMovieDetails"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.luisfelipe.movies.presentation.details.MovieDetailsFragment"
        android:label="@string/title_movie_details"
        tools:layout="@layout/fragment_movie_details">

        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

</navigation>