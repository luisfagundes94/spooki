    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_title_size</item>
        <item name="android:padding">@dimen/default_padding_for_accessibility</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallTitle" parent="Title">
        <item name="android:textSize">@dimen/small_title_size</item>
    </style>

    <style name="SuperSmallTitle" parent="Title">
        <item name="android:textSize">@dimen/super_small_title_size</item>
    </style>
</resources>