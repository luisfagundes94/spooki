<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:textSize">@dimen/default_title_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_horizontal_margin</item>
    </style>

    <style name="SubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_subtitle_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_horizontal_margin</item>
    </style>

    <style name="SmallTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_small_title_size</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/default_small_title_drawable_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultText" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_horizontal_margin</item>
    </style>

</resources>